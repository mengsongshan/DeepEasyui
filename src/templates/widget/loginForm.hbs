<div id="dlg" class="easyui-dialog" style="width:400px" data-options="closed:true,modal:true,border:'thin',buttons:'#dlg-buttons'">
    <form id="fm" method="post" novalidate style="margin:0;padding:20px 50px">
        <h3>欢迎登录</h3>
        <div style="margin-bottom:20px">
            <input name="username" class="easyui-textbox" required="true" label="用户名:" iconWidth="28" style="width:100%;height:34px;padding:10px;">
        </div>
        <div style="margin-bottom:20px">
            <input name="password" class="easyui-passwordbox" required="true" label="密码:" iconWidth="28" style="width:100%;height:34px;padding:10px">
        </div>
        <div style="margin-bottom:20px">
            <input name="password" class="easyui-passwordbox" required="true" label="确认密码:" iconWidth="28" style="width:100%;height:34px;padding:10px;display:none">
        </div>

    </form>
</div>
<div id="dlg-buttons">
    <a href="javascript:void(0)" class="easyui-linkbutton c6" iconCls="icon-ok" onclick="saveUser()" style="width:90px">登录</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-cancel" onclick="javascript:$('#dlg').dialog('close')"
        style="width:90px">Cancel</a>
</div>